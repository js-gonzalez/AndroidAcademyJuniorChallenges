<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidAcademyJuniorChallenges" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cyan_200</item>
        <item name="colorPrimaryVariant">@color/cyan_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_200</item>
        <item name="colorSecondaryVariant">@color/blue_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="AlertDialogStyleInfo" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="colorPrimary">@color/white</item>
        <item name="colorSecondary">@color/yellow_dark</item>
        <item name="colorSurface">@color/blue_dark</item>
        <item name="colorOnSurface">@color/yellow_light</item>
        <item name="materialAlertDialogTitleTextStyle">@style/AlertDialogTitleTextStyle</item>
    </style>
    <style name="AlertDialogStyleCancel" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="colorPrimary">@color/white</item>
        <item name="colorSecondary">@color/yellow_dark</item>
        <item name="colorSurface">@color/yellow_dark</item>
        <item name="colorOnSurface">@color/yellow_light</item>
        <item name="materialAlertDialogTitleTextStyle">@style/AlertDialogTitleTextStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogPositiveBtnStyle</item>
    </style>
</resources>
